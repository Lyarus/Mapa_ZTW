

<div id="fh5co-main">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h2>Logowanie</h2>
                <div class="fh5co-spacer fh5co-spacer-sm"></div>
                <form action="{{ path('login') }}" method="post">
                    <div class="row">
                        <div class="row">
                            <div class="form-group">
                                <label>Nazwa użytkownika</label>
                                <input class="form-control" type="text" placeholder="Username" id="username" name="_username" value="{{ last_username|default() }}" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Hasło</label>
                                <input class="form-control" type="password" placeholder="Password" id="password" name="_password" >
                            </div>
                        </div>
                        <div class="row">
                            <a href="{{ path('homepage') }}">Wróć</a>
                            <div style="text-align: right">
                                <button class="btn-primary btn" type="submit"><i class="icon-login"></i> Zaloguj</button>
                            </div>

                        </div>
                    </div>

                    <div class="row" align="center">
                        <h4>Nie masz jeszcze konta?</h4>
                        <a href="{{ path('register') }}">Zarejestruj</a>
                    </div>
            </form>
        </div>
    </div>
</div>
</div>